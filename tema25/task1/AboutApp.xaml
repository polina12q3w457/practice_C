<Window x:Class="task1.AboutApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task1"
        mc:Ignorable="d"
        Title="AboutApp" Height="450" Width="800">
    <Grid x:Name="layoutAbout">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlockInfo" Margin="40" Grid.Row="0"/>
        <Button x:Name="ButtonClose" Content="Example Width=200" Height="50" Grid.Row="1"/>
    </Grid>
</Window>
